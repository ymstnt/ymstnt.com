<style>
  @font-face {
    font-family: 'Imperial Script';
    src: url('/fonts/ImperialScript-Regular.woff2') format('woff2');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  body {
    margin: 0;
    overflow-wrap: break-word;
  }

  #tesi-section {
    margin: 0 auto;
    max-width: 500px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  #tesi {
    justify-content: center;
    align-items: center;
    background: var(--mantle);
    max-width: 20em;
    border-radius: 1em;
    padding: 2em;
    margin: 2em;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  #in-memoriam {
    justify-content: center;
    align-items: center;
    background: var(--mantle);
    max-width: 20em;
    border-radius: 1em;
    padding: 2em;
    margin: 1em;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  #in-memoriam-title {
    font-family: "Imperial Script", cursive;
    font-weight: normal;
    font-size: 2em;
  }

  #dobozimg {
    width: 10em;
    height: 10em;
    margin-bottom: 0.5em;
  }

  #livedate {
    color: var(--overlay);
    margin-bottom: 0.5em;
  }

  #dobozname {
    margin-bottom: 0.5em;
  }

  p {
    font-size: 1.2em;
  }

  p,
  h1 {
    margin: 0.7em;
  }

  h3 {
    margin-top: 0;
  }

  .small {
    font-size: 0.9em;
    margin: 0;
  }

  #firstLessons {
    font-weight: bold;
  }

  h1 {
    font-size: 2em;
  }

  @media (max-width: 500px) {
    body {
      font-size: 1em;
    }
    main {
      padding: 1.5em;
    }
    #tesi-section {
      left: unset;
      transform: unset;
      position: unset;
      padding-bottom: 1em;
    }
  }

  @media (max-height: 800px) {
    #tesi-section {
      position: unset;
      left: unset;
      top: unset;
      transform: unset;
